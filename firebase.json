{
  "hosting": {
    "public": ".",
    "ignore": ["firebase.json", "**/.*", "**/node_modules/**"],
    "headers": [
      { "source": "**/*.glb",  "headers": [ { "key": "Content-Type", "value": "model/gltf-binary" } ] },
      { "source": "**/*.gltf", "headers": [ { "key": "Content-Type", "value": "model/gltf+json" } ] }
    ]
  }
}
